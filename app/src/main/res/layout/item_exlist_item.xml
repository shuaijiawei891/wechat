<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <LinearLayout
        android:id="@+id/help1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/helpimage1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/faqiqunliao"/>
        <TextView
            android:id="@+id/helptext1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="发起群聊"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/helpimage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tianjia2"/>
        <TextView
            android:id="@+id/helptext2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="添加朋友"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/helpimage3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/saoyisao"/>
        <TextView
            android:id="@+id/helptext3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="扫一扫"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/helpimage4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shoufukuan"/>
        <TextView
            android:id="@+id/helptext4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="收付款"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/helpimage5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/help"/>
        <TextView
            android:id="@+id/helptext5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="帮助与反馈"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>